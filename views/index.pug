extends layout

block content
  h2 Book List
  div#book-list
    table.table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
          th
      tbody
        each book in books
          tr
            td= book.title
            td= book.author
            td= book.genre
            td= book.year
            td
              a(href=`/books/${book.id}`) View Details
  a(href='/books/new') Add New Book
