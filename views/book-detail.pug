extends layout

block content
  h1 Book Details

  if errors
    ul.errors
      each error in errors
        li= error.message

  p
    label(for="title") Title:
    span= book.title

  p
    label(for="author") Author:
    span= book.author

  p
    label(for="genre") Genre:
    span= book.genre

  p
    label(for="year") Year:
    span= book.year

  p 
    form(action='/books/' + book.id + '/edit', method='get', style="display:inline;")
      input.button(type='submit', value='Update')
      br

  p
    form(method="post", action="/books/" + book.id + "/delete", style="display:inline;")
      input.button(type='submit', value='Delete Book')
      br

  p
    form(method="get", action="/books", style="display:inline;")
      input.button(type='submit', value='Cancel')


